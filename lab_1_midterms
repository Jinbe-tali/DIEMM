#1
def is_palindrome(palindrome):
    palindrome = str(palindrome)
    return palindrome == palindrome[::-1]

input_pali = input("Enter a word or number: ")
if is_palindrome(input_pali):
    print(f"{input_pali} is a palindrome.")
else:
    print(f"{input_pali} is not a palindrome.")
#2
def get_grade(score):
    if 90 <= score <= 100:
        return "A"
    elif 80 <= score < 90:
        return "B"
    elif 70 <= score < 80:
        return "C"
    elif 60 <= score < 70:
        return "D"
    else:
        return "F"
    
input_score = int(input("Enter the score (0-100): "))
print(f"The grade is: {get_grade(input_score)}")
#3
def multiply_all(*args):
    result = 1
    for num in args:
        result *= num
    return result
#4
def print_formatted_info(title, **kwargs):

    print(title.upper())


    for key, value in kwargs.items():
        print(f"{key}: {value}")


print_formatted_info("report", name="John", score=85, status="Pass")

