#1
log_line = "ERROR 2024-10-06 14:35:01 Database connection failed"

parts = log_line.split(" ", 3)
log_level = parts[0]       
message   = parts[3]          

print("log level ", log_level)
print("message ", message)

#2
summary = "[{}] -> {}".format(log_level, message)
print(summary)

#3
def find_all_emails(text):

    words = text.split()
    emails = []

    for word in words:
        cleaned = word.strip(".,;:()<>\"'")

        if "@" in cleaned:
            parts = cleaned.split("@")
            if len(parts) == 2 and "." in parts[1]:
                emails.append(cleaned)

    return emails

test = "Contact alice@example.com, bob.smith@company.co.uk; or admin@localhost for help."
print(find_all_emails(test))

#4
def convert_to_title_case(underscore_string):
    parts = [p for p in underscore_string.strip().split("_") if p != ""]
    title_parts = [p.capitalize() for p in parts]
    return " ".join(title_parts)

print(convert_to_title_case("customer_account_id")) 
